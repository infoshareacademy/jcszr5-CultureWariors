@using OnlineLibrary.BLL.Models
@model ShoppingCart

@{
    ViewData["Title"] = "Details";
}

<h1>Szczegóły</h1>

<h4>Książka</h4>
    <hr />
    <div class="col-2 pt-4">
			<img src="~/@Model.Book.ImageUrl"
			width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
		</div>
    <dl class="row">
        <dt class = "col-sm-2" hidden>
            <label asp-for="Id"></label>
        </dt>

        <dd class = "col-sm-10" hidden>
            @Model.Book.Id
        </dd>
        
        <dt class = "col-sm-2">
            <label asp-for="Book.Title">Tytuł</label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Book.Title
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Book.Author.Name">Autor</label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Book.Author.Name
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Book.BookType">Kategoria</label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Book.BookType
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Book.PublicationDate">Data publikacji</label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Book.PublicationDate
        </dd>
    </dl>
    
<div>
    <a asp-action="Index" class="btn btn-outline-dark">Powrót</a>
    <form method="post">
        <input hidden asp-for="Book.Id" />
        <button type="submit" value="Dodaj do koszyka" class="btn btn-primary">Dodaj do wózka</button>
    </form>
</div>