@model IEnumerable<OnlineLibrary.BLL.Models.Author>

@{
    ViewData["Title"] = "Index";
}

<h1>Autorzy</h1>

<p>
    <a asp-action="Create">Dodaj autora</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <label asp-for="First().Name">Imię</label>
            </th>
            
            <th>
                <label asp-for="First().BooksWriten">Książki w bazie</label>
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Name
            </td>
            
            <td>
                @item.BooksWriten.Count()
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
